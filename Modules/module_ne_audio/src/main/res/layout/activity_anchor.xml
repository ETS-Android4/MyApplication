<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/base_audio_ui"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/apply_hint"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_38"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_gradient_r20"
        android:gravity="center"
        android:paddingLeft="@dimen/dimen_12"
        android:paddingRight="@dimen/dimen_12"
        android:text="@string/apply_micro"
        android:textColor="@color/basics_white"
        android:textSize="@dimen/text_14"
        app:drawableEndCompat="@drawable/arrow_down" />

</FrameLayout>